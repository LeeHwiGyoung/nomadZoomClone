doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom
            main
                div#welcome
                    form#loby
                        input(placeholders = "room name", type = "text" , required)
                        button EnterRoom
                    h4 Open Rooms:
                    ul
                div#room
                    h3
                    form#nick
                        input(placeholders = "choose your nickname", type = "text" , required)
                        button Save
                    ul
                    form#msg
                        input(placeholders="message", required, type='text')
                        button Send 
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")